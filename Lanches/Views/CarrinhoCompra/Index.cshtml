@model CarrinhoCompraViewModel



<div class="container">
    <div class="row">
        <img src="~/images/CarrinhoCompra/Full-Cart-icon.png" />

        <div>
            <h4>Seu carrinho de compra</h4>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td>
                            <input type="text" value="@item.Quantidade" />
                        </td>
                        <td>
                            @item.Lanche.Nome
                        </td>
                        <td class="text-right">
                            @item.Lanche.Preco.ToString("C")
                        </td>
                        <td class="text-right">
                            @(item.Lanche.Preco * item.Quantidade).ToString("C")
                        </td>
                        <td>
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                            asp-route-lancheId="@item.Lanche.LancheId"><img
                                src="~/images/CarrinhoCompra/delete.png" /></a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total</td>
                    <td class="text-right">@Model.CarrinhoCompraTotal.ToString("C")</td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <a asp-controller="Pedido" asp-action="Checkout" class="btn btn-success">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
            <a asp-controller="Lanche" asp-action="List" class="btn btn-primary">Continuar Comprando</a>
    </div>
</div>